
<!-- {{log session}} -->


{{#if isEditing}}
  <div class="final-rant right-fixed-column clearfix rants-transition">
    <div class="rants-header">
      {{#if isEditingCurrent}}
      <button class="edit-button" name="Edit" {{action "editRant"}}>Edit  {{fa-icon "edit"}}</button>
      {{/if}}
      {{#link-to "rant.index" rant}}<h2 class="h2-header">{{this.rant.title}}</h2>{{/link-to}}
    </div>
    <div class="block-it">
      <div class="outer-image gravatar-redux">
        {{gravatar-image email=rant.user.email alt=rant.user.firstName size=200}}
      </div>
      <p class="rant-body-adjust"> {{rant.body}}</p>
    </div>
  </div>
{{else}}
  <div class="final-rant right-fixed-column clearfix rants-transition">
    <div class="rants-header ">
      <button class="delete-button" name="delete" {{action "componentDeleteSend" rant.id}}>Delete  {{fa-icon "edit"}}</button>
      <button class="cancel-button" name="Edit" {{action "editCancel" rant}}>Cancel  {{fa-icon "edit"}}</button>
      <button class="save-button" name="dave" {{action "editSave" rant}}>Save  {{fa-icon "edit"}}</button>
      <h2 class="h2-header ">{{input value=rant.title class="rants-input-edit"}}</h2>
    </div>
    <div class="block-it">
      {{#if errorToggle1}}
          <p class="error-format-pull-left">{{errors.title}}</p>
      {{/if}}
      <div class="outer-image gravatar-redux">
        {{gravatar-image email=rant.user.email alt=rant.user.firstName size=200}}
      </div>
      <div class="body-length-format">
        {{#if rant.body.length}}
        This post is {{rant.body.length}} characters.
        {{else}}
        This post has 0 characters.
        {{/if}}
      </div>
      {{#if errorToggle2}}
          <p class="error-format">{{errors.body}}</p>
      {{/if}}
      {{textarea value=rant.body class="textarea-format"}}
    </div>

  </div>

{{/if}}

{{outlet}}
